<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Level Livings</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Linking external CSS file -->
    <link href="~/Content/layout-styles.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                    <!-- Header Logo -->
                    <img src="~/images/levellivings-logo.png" alt="Level Livings">
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", null, new { style = "color: black;" })</li>
                    <li>@Html.ActionLink("Buy", "Buy", "Home", null, new { style = "color: black;" })</li>
                    <li>@Html.ActionLink("Rent", "Rent", "Home", null, new { style = "color: black;" })</li>
                    <li>@Html.ActionLink("Sell", "Sell", "Home", null, new { style = "color: black;" })</li>
                    <li>@Html.ActionLink("Services", "Services", "Home", null, new { style = "color: black;" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", null, new { style = "color: black;" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", null, new { style = "color: black;" })</li>
                    <li>@Html.ActionLink("FAQ", "FAQ", "Home", null, new { style = "color: black;" })</li>

                    <!--  email and call logos -->
                    <li><img src="~/images/email-icon.png" alt="Email" class="email-icon"></li>
                    <li><img src="~/images/call-icon.png" alt="Call" class="call-icon"></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
      

        <!-- Footer Section -->
                 
        <footer>
            <div class="footer-content">
                <div class="footer-column">
                    <h2>Welcome to Levellivings</h2>
                    <p>Discover exceptional service and expertise at Levellivings. Whether you're buying, selling, renting, or investing, our dedicated team is here to guide you every step of the way. Find your dream home or investment property with us today!</p>
                </div>
                <div class="footer-column">
                    <h2>Quick Links</h2>
                    <ul>
                        <li><a href="http://localhost:62427/">Home</a></li>
                        <li><a href="http://localhost:62427/Home/Buy">Buy</a></li>
                        <li><a href="http://localhost:62427/Home/Sell">Sell</a></li>
                        <li><a href="http://localhost:62427/Home/Services">Services</a></li>
                        <li><a href="http://localhost:62427/Home/About">About</a></li>
                        <li><a href="http://localhost:62427/Home/Contact">Contact</a></li>
                        <li><a href="http://localhost:62427/Home/FAQ">FAQ's</a></li>
                    </ul>
                </div>
                <div class="footer-column contact-info">
                    <h2>Contact Us</h2>
                    <p>Address: Abdullah Chaudhary Mansoora Bazar,</p>
                    <p>Lahore, Punjab, Pakistan 54790</p>
                    <p>Email: <a href="mailto:contact@levellivings.com">contact@levellivings.com</a></p>
                    <p>Phone: <a href="tel:+923374840228">+92 337 4840228</a></p>
                </div>
            </div>
            <hr>
            <div class="footer-links">
                <div>
                    <p>&copy; @DateTime.Now.Year - levellivings.com</p>
                </div>
                <div>
                    <a href="http://localhost:62427/Home/Terms">Term of use</a>
                    <span></span>
                    <a href="http://localhost:62427/Home/Privacy">Privacy Policy</a>
                </div>
            </div>
        </footer>
    </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
